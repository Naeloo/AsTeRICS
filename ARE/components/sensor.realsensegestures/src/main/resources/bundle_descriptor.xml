<?xml version="1.0"?>
<componentTypes xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
            xsi:noNamespaceSchemaLocation="bundle_model.xsd">

    <componentType id="asterics.RealSenseGestures"
                   canonical_name="eu.asterics.component.sensor.realsensegestures.RealSenseGesturesInstance">
        <type subtype="Computer Vision">sensor</type>
        <singleton>false</singleton>
        <description>Detects Hand Gestures using a modern Intel RealSense equipped camera</description>
        <ports>

			<outputPort id="detected">
				<description>True when Hand is recognized</description>
				<dataType>boolean</dataType>
			</outputPort>
			<outputPort id="fingers_extended">
				<description>Number of fingers extended (0-5)</description>
				<dataType>integer</dataType>
			</outputPort>

        </ports>
		<events>

		</events>			
        <properties>

        </properties>

    </componentType>
</componentTypes>
